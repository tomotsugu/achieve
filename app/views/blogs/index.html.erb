<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.Content %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to "edit", edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' } %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
